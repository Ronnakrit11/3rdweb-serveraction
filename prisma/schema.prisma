generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id          String        @id @default(cuid())
  number      String        @unique
  userId      String
  clientName  String
  clientEmail String
  amount      Float
  status      InvoiceStatus @default(pending)
  dueDate     DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       InvoiceItem[]

  @@index([userId])
  @@index([status])
  @@index([clientName])
  @@index([clientEmail])
  @@index([createdAt])
}

model InvoiceItem {
  id          String  @id @default(cuid())
  description String
  quantity    Int
  unitPrice   Float
  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

enum InvoiceStatus {
  pending
  paid
  rejected
}